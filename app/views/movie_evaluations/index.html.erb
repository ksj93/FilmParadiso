<p id="notice"><%= notice %></p>

<h1>Movie Evaluations</h1>

<table>
  <thead>
    <tr>
      <th>Short criticism</th>
      <th>Score</th>
      <th>Movie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_evaluations.each do |movie_evaluation| %>
      <tr>
        <td><%= movie_evaluation.short_criticism %></td>
        <td><%= movie_evaluation.score %></td>
        <td><%= movie_evaluation.movie_id %></td>
        <td><%= link_to 'Show', movie_evaluation %></td>
        <td><%= link_to 'Edit', edit_movie_evaluation_path(movie_evaluation) %></td>
        <td><%= link_to 'Destroy', movie_evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

